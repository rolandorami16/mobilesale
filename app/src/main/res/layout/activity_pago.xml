<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagoActivity">

    <Button
        android:id="@+id/btncredito"
        android:layout_width="195dp"
        android:layout_height="164dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="256dp"

        android:drawableTop="@drawable/tcredito"
        android:text="Tarjeta de credito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btbdebito"
        android:layout_width="195dp"
        android:layout_height="164dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:drawableTop="@drawable/tdebito"
        android:text="Tarjeta de debito"
        android:onClick="clickdebito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnpagoefectivo"
        android:layout_width="195dp"
        android:layout_height="164dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="8dp"
        android:drawableTop="@drawable/paypal"
        android:text="Banca por Internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btbdebito" />
</androidx.constraintlayout.widget.ConstraintLayout>